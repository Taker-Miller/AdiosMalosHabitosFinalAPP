<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/purple_dark">

    <!-- CardView para el periodo seleccionado -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="16dp"
        android:padding="16dp"
        android:backgroundTint="@color/purple_light">

        <TextView
            android:id="@+id/periodoSeleccionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Periodo Seleccionado"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

    <!-- CardView para los h치bitos seleccionados -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:backgroundTint="@color/purple_light">

        <TextView
            android:id="@+id/habitoSeleccionado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="H치bitos Seleccionados"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="center" />
    </androidx.cardview.widget.CardView>

    <!-- Bot칩n para comenzar el plan -->
    <Button
        android:id="@+id/comenzarPlanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comenzar Plan"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/teal_dark"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"
        android:textSize="16sp" />

    <!-- Bot칩n para volver -->
    <Button
        android:id="@+id/volverButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volver"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/red"
        android:padding="16dp"
        android:elevation="4dp"
        android:textSize="16sp" />

</LinearLayout>
